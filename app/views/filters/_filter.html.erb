<li class="list-group-item clearfix user-filter"  id="<%= dom_id(filter) %>">
  <span class="pull-left">
    <span class="list-group-addon glyphicon glyphicon-filter"></span> <%= filter.name.capitalize %>
  </span>
  <span class="pull-right">
    <% if filter.messages.uniq.count >= 1 %>
      <b class="badge green"><%= filter.messages.uniq.count %></b>
      <span class="pull-left">&nbsp;</span>
    <% end %>
  </span>
  <span class="pull-right delete-filter"><!-- use JS to hide on mouseout -->
    <%= link_to user_filter_path(id: filter.id, user_id: current_user.id), method: :delete, data:{confirm: "Are You Sure you want to delete filter \"#{filter.name}\"?", disable_with: "Deleting..."}, remote: true, id: "user-filter-delete" do %>
      <b class="badge red"><span class="list-group-addon glyphicon glyphicon-remove"></span></b><%end%>
  </span>
</li>
